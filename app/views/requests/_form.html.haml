= form_for(@request, html: { class: 'form-horizontal' }) do |f|
  - if @request.errors.any?
    #error_explanation
      %ul
        - @request.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    %label.control-label= t("requests.form.label.name")
    .controls
      != f.text_field :name
  .control-group
    %label.control-label= t("requests.form.label.description")
    .controls
      != f.text_area :description
  .control-group
    %label.control-label= t("requests.form.label.category")
    .controls
      != f.select :category_id, options_from_collection_for_select(Category.all, :id, :name)
  .control-group
    %label.control-label= t("requests.form.label.recurrence")
    .controls
      != f.select :recurrence_id, options_from_collection_for_select(Recurrence.all, :id, :name)
  .control-group
    %label.control-label= t("requests.form.label.duration")
    .controls
      != f.text_field :duration, :type => "number", :value => @request.duration || 2
      %span.help-inline= t("requests.form.label.duration_units")
  .control-group
    .controls
      = f.submit class: "btn btn-orange"
