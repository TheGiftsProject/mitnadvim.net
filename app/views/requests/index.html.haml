.requests_index
  .row.header
    .span8
      %h1= t("requests.index.header")
    .span4
      %a.new_request.btn.btn-orange{ :href => new_request_path }= t("requests.index.create_new")

  .row
    .span12
      %ul.nav.nav-tabs
        %li{ class: (@closed_requests ? "" : "active") }
          %a{ :href => requests_path(:requests => "open") }= t("requests.index.active_requests")
        %li{ class: (@closed_requests ? "active" : "") }
          %a{ :href => requests_path(:requests => "closed") }= t("requests.index.closed_requests")
  .row
    .list.box.span12.tab-content
      - if (@requests.empty?)
        .empty
          %span= t("requests.index.list_empty_title")
          %a.btn.btn-orange{ :href => new_request_path }= t("requests.index.create_new")
      - else
        - @requests.each do |req|
          != render partial: "layouts/components/request/request_row", locals: { req: req, type: "school" }
          != render partial: "modals/school/request_modal", locals: {vrequest: req, id: "school_request_modal#{req.id}"}
