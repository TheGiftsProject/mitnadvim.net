<h1>Listing requests</h1>

<table>
  <tr>
    <th>Status</th>
    <th>School</th>
    <th>Name</th>
    <th>Description</th>
    <th>Photo url</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= request.status %></td>
    <td><%= request.school_id %></td>
    <td><%= request.name %></td>
    <td><%= request.description %></td>
    <td><%= request.photo_url %></td>
    <td><%= request.category_id %></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

