.volunteer_profile
  .row
    .span12
      .box
        .header.light
          = t("users.profile.title")
        .content
          != render partial: "volunteers/simple_profile", :locals => {:user => @user}

  .row
    .span12
      .box
        .header
          = t("users.profile.my_active_requests")
        .content
          -if @active_requests.count > 0
            != render partial: "components/request/request_row", :collection => @active_requests, :as => :req, :locals => {:type => 'user'}
          -else
            .empty_group{:style => "margin-top: 10px;"}
              = t("requests.pages.index.list.no_requests")
