.row
  .box.span8
    .row
      .span4.welcome
        %h1= t("homepage.title")
        %p= t("homepage.paragraph")
      .span4.steps
        %ol
          - t("homepage.steps").each do |step|
            %li
              %span.step= step
  .box.span4
    .header.light= t("homepage.profile")

.row
  .span12
    .box
      .header
        = t("home.requests.title")
      .content
        -if @active_requests.count > 0
          != render partial: "layouts/components/request/request_row", :collection => @active_requests, :as => :req, :locals => {:type => 'main'}
        -else
          .empty_group{:style => "margin-top: 10px;"}
            = t("requests.no_requests")

